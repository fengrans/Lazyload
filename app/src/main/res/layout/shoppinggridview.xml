<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goods_img"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/efficacy"
        android:textColor="#000000"
        android:text="苏磊是傻逼"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goods_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="镇店之宝"
        android:id="@+id/goods_name"
        android:layout_below="@+id/efficacy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示价格"
        android:id="@+id/shop_price"
        android:textColor="#FF8080"
        android:layout_below="@+id/goods_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="市场价"
        android:id="@+id/market_price"
        android:layout_alignTop="@+id/shop_price"
        android:layout_toRightOf="@+id/shop_price"
        android:layout_toEndOf="@+id/shop_price" />
</RelativeLayout>